<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ItemTvShowBinding"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_tv_show"
        android:background="#454B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_tv_show_illustration"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_tv_show_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            tools:text="This is a dummy title"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_tv_show_illustration"
            app:layout_constraintTop_toTopOf="@id/iv_tv_show_illustration"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_tv_show_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginVertical="8dp"
            android:textColor="@color/black"
            tools:text="This is a dummy description"
            app:layout_constraintStart_toEndOf="@id/iv_tv_show_illustration"
            app:layout_constraintTop_toBottomOf="@id/tv_tv_show_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
